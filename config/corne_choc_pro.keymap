#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BASE1  0
#define BASE2  1
#define KOR1   2
#define KOR2   3
#define ARROWS 4
#define FUNS   5
#define SYM1   6
#define SYM2   7
#define NUMS   8

/ {
   chosen {
      zmk,physical-layout = &five_col_layout;
   };
};

&sl {
    release-after-ms = <500>;
    quick-release;
};

&sk {
    release-after-ms = <500>;
    quick-release;
};

/ {
   macros {
      lang1: lang1 {
         compatible = "zmk,behavior-macro-one-param";
         wait-ms = <0>;
         tap-ms = <0>;
         #binding-cells = <1>;
         bindings =
            <&macro_tap &kp LC(SPACE)>
            , <&macro_param_1to1>
            , <&macro_tap &to MACRO_PLACEHOLDER>;
      };
      lang2: lang2 {
         compatible = "zmk,behavior-macro-one-param";
         wait-ms = <0>;
         tap-ms = <0>;
         #binding-cells = <1>;
         bindings =
            <&macro_param_1to1>
            , <&macro_tap &to MACRO_PLACEHOLDER>;
      };
   };
   combos {
        compatible = "zmk,combos";
        combo_f1 {
            key-positions = <16 25>;
            bindings = <&kp F1>;
            layers = <8>;
        };
        combo_f2 {
            key-positions = <16 26>;
            bindings = <&kp F2>;
            layers = <8>;
        };
        combo_f3 {
            key-positions = <16 27>;
            bindings = <&kp F3>;
            layers = <8>;
        };
        combo_f4 {
            key-positions = <16 13>;
            bindings = <&kp F4>;
            layers = <8>;
        };
        combo_f5 {
            key-positions = <16 14>;
            bindings = <&kp F5>;
            layers = <8>;
        };
        combo_f6 {
            key-positions = <16 15>;
            bindings = <&kp F6>;
            layers = <8>;
        };
        combo_f7 {
            key-positions = <16 1>;
            bindings = <&kp F7>;
            layers = <8>;
        };
        combo_f8 {
            key-positions = <16 2>;
            bindings = <&kp F8>;
            layers = <8>;
        };
        combo_f9 {
            key-positions = <16 3>;
            bindings = <&kp F9>;
            layers = <8>;
        };
        combo_f10 {
            key-positions = <16 24>;
            bindings = <&kp F10>;
            layers = <8>;
        };
        combo_f11 {
            key-positions = <16 12>;
            bindings = <&kp F11>;
            layers = <8>;
        };
        combo_f12 {
            key-positions = <16 0>;
            bindings = <&kp F12>;
            layers = <8>;
        };
        combo_tilde {
            key-positions = <13 14>;
            bindings = <&kp TILDE>;
            layers = <6>;
        };
        combo_bslh {
            key-positions = <25 26>;
            bindings = <&kp BSLH>;
            layers = <6>;
        };
        combo_grave {
            key-positions = <13 14>;
            bindings = <&kp GRAVE>;
            layers = <7>;
        };
        combo_n0 {
            key-positions = <14 15>;
            bindings = <&kp N0>;
            layers = <6>;
        };
        combo_n1 {
            key-positions = <14 27>;
            bindings = <&kp N1>;
            layers = <6>;
        };
        combo_lshft {
            key-positions = <14 15>;
            bindings = <&sk LSHFT>;
            layers = <0 1 2 3>;
        };
        combo_cw {
            key-positions = <13 15>;
            bindings = <&caps_word>;
            layers = <0 1 2 3>;
        };
        combo_tab {
            key-positions = <13 14>;
            bindings = <&kp TAB>;
            layers = <0 1 2 3>;
        };
        combo_esc {
            key-positions = <2 3>;
            bindings = <&kp ESC>;
            layers = <0 1 2 3>;
        };
        combo_ret {
            key-positions = <26 27>;
            bindings = <&kp RET>;
            layers = <0 1 2 3>;
        };
        combo_lcmd {
            key-positions = <15 16>;
            bindings = <&sk LCMD>;
            layers = <0 1 2 3>;
        };
        combo_lctrl {
            key-positions = <27 28>;
            bindings = <&sk LCTRL>;
            layers = <0 1 2 3>;
        };
        combo_lalt {
            key-positions = <3 4>;
            bindings = <&sk LALT>;
            layers = <0 1 2 3>;
        };
    };
   keymap {
      compatible = "zmk,keymap";
      base1_layer {
         display-name = "BASE1";
         bindings = <
            &kp D     &kp N &kp I &kp S &kp Z &none &none &none &none &none &none &none
            &kp SPACE &kp R &kp E &kp T &kp W &none &none &none &none &none &none &none
            &kp B     &kp L &kp A &kp C &kp Q               &none &none &none &none &none
            &lt ARROWS BSPC &sl BASE2 &sl SYM1 &none &none &none
            >;
      };
      base2_layer {
         display-name = "BASE2";
         bindings = <
            &kp G &kp X &kp U &kp F &none       &none &none &none &none &none &none &none
            &kp P &kp H &kp O &kp M &lang1 KOR1 &none &none &none &none &none &none &none
            &kp K &kp J &kp Y &kp V &lang2 KOR1             &none &none &none &none &none
            &kp BSPC &to BASE1 &kp DEL &none &none &none
            >;
      };
      kor1_layer {
         display-name = "KOR1";
         bindings = <
            &kp Q     &kp W &kp E &kp R &kp T &none &none &none &none &none &none &none
            &kp SPACE &kp A &kp S &kp D &kp F &none &none &none &none &none &none &none
            &kp Z     &kp X &kp C &kp V &kp G             &none &none &none &none &none
            &lt ARROWS BSPC &sl KOR2 &trans &none &none &none
            >;
      };
      kor2_layer {
         display-name = "KOR2";
         bindings = <
            &kp O &kp I &kp U &kp Y &none        &none &none &none &none &none &none &none
            &kp L &kp K &kp J &kp H &lang1 BASE1 &none &none &none &none &none &none &none
            &kp P &kp M &kp N &kp B &lang2 BASE1             &none &none &none &none &none
            &kp BSPC &to KOR1 &kp DEL &none &none &none
            >;
      };
      arrows_layer {
         display-name = "ARROWS";
         bindings = <
            &kp HOME &kp PG_DN &kp PG_UP &kp END   &none &none &none &none &none &none &none &none
            &kp LEFT &kp DOWN  &kp UP    &kp RIGHT &none &none &none &none &none &none &none &none
            &sl FUNS &kp INS   &kp LC(B) &kp CAPS  &none             &none &none &none &none &none
            &none &none &none &none &none &none
            >;
      };
      funs_layer {
         display-name = "FUNS";
         bindings = <
            &bt BT_CLR &bt BT_SEL 2 &bt BT_SEL 1 &bt BT_SEL 0 &none &none &none &none &none &none &none &none
            &kp C_PREV &kp C_VOL_DN &kp C_VOL_UP &kp C_NEXT   &none &none &none &none &none &none &none &none
            &none      &kp C_BRI_DN &kp C_BRI_UP &kp C_PP     &none             &none &none &none &none &none
            &none &none &none &none &none &none
            >;
      };
      sym1_layer {
         display-name = "SYM1";
         bindings = <
            &kp COLON &kp LPAR  &kp RPAR  &kp SEMI &kp DLLR             &none &none &none &none &none
            &sl SYM2  &kp UNDER &kp COMMA &kp DOT  &kp AMPS  &none &none &none &none &none &none &none
            &kp LT    &kp FSLH  &kp MINUS &kp GT   &kp EXCL  &none &none &none &none &none &none &none
            &none &none &sl NUMS &none &none &none
            >;
      };
      sym2_layer {
         display-name = "SYM2";
         bindings = <
            &kp LBKT  &kp LBRC &kp RBRC &kp RBKT &kp CARET &none &none &none &none &none &none &none
            &kp PRCNT &kp DQT  &kp SQT  &kp EQL  &kp PIPE  &none &none &none &none &none &none &none
            &kp AT    &kp STAR &kp PLUS &kp HASH &kp QMARK             &none &none &none &none &none
            &none &none &none &none &none &none
            >;
      };
      nums_layer {
         display-name = "NUMS";
         bindings = <
            &kp STAR &kp N7 &kp N8 &kp N9 &kp FSLH  &none &none &none &none &none &none &none
            &kp PLUS &kp N4 &kp N5 &kp N6 &kp MINUS &none &none &none &none &none &none &none
            &kp N0   &kp N1 &kp N2 &kp N3 &kp DOT               &none &none &none &none &none
            &none &none &none &none &none &none
            >;
      };
   };
};
